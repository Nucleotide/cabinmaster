<h1>Listing all visits</h1>

<table class="table table-condensed">
  <thead>
  <tr>
    <th>Start date</th>
    <th>End date</th>
    <th>Cabin</th>
    <th>User</th>
  </tr>
  </thead>

  <tbody>
  <% @visits.each do |visit| %>
          <tr>
            <td><%= visit.start_date %></td>
            <td><%= visit.end_date %></td>
            <td><%= visit.cabin_name(visit.cabin_id) %></td>
            <td><%= visit.user_name(visit.user_id) %></td>
          </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', visits_path, class:'btn btn-primary' %>
