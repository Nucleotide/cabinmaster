<h1>Listing needs</h1>
<p>You can order the list based on cabin, user or the information.<br/>
    Want to search? Ctrl + F</p>

<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= link_to 'Cabin', needs_path(order:"cabin") %></th>
      <th><%= link_to 'User', needs_path(order:"user") %></th>
      <th><%= link_to 'Info', needs_path(order:"info") %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @needs.each do |need| %>
      <tr>
        <td><%= need.cabin_name(need.cabin_id) %></td>
        <td><%= need.user_name(need.user_id) %></td>
        <td><%= need.info %></td>
        <td><%= link_to 'Edit', edit_need_path(need) %></td>
        <td><%= link_to 'Destroy', need, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% unless current_user.nil? %>
    <%= link_to 'New Need', new_need_path, class:'btn btn-primary' %>
<% end %>

