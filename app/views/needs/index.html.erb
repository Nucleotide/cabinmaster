<h1>Listing needs</h1>

<table>
  <thead>
    <tr>
      <th>Cabin</th>
      <th>User</th>
      <th>Info</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @needs.each do |need| %>
      <tr>
        <td><%= need.cabin_name(need.cabin_id) %></td>
        <td><%= need.user_name(need.user_id) %></td>
        <td><%= need.info %></td>
        <td><%= link_to 'Edit', edit_need_path(need) %></td>
        <td><%= link_to 'Destroy', need, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% unless current_user.nil? %>
    <%= link_to 'New Need', new_need_path %>
<% end %>

